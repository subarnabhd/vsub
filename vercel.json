{
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.7.0"
    }
  },
  "routes": [
    { "src": "/css/(.*)", "dest": "/css/$1" },  
    { "src": "/js/(.*)", "dest": "/js/$1" },    
    { "src": "/images/(.*)", "dest": "/images/$1" },  
    { "src": "/api/(.*)", "dest": "/api/$1" },  
    { "src": "/(.+\\.php)", "dest": "/$1" },   
    { "src": "/(.*)", "dest": "/api/$1" }   
    { "src": "/api/tools.php", "dest": "/api/tools.php" },
  ]
}
